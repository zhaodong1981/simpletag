import React from 'react';
import './App.css';
import MaterialTable from 'material-table';

function App() {
  const [state, setState] = React.useState({
    columns: [
      { title: 'Title', field: 'title' },
      { title: 'URL', field: 'url',render: rowData => <a href={rowData.url} target="_blank">{rowData.url}</a> },
      { title: 'Date', field: 'date'},
      { title: 'Tags', field: 'tags'}
    ],
    data: [
      { title: 'Gmail', url: 'https://mail.google.com', date: '2019-6-12', tags: '[mail,tool]'  },
      { title: '网易', url: 'https://www.163.com', date: '2019-6-12' , tags: '[news]'}
    ],
  });

  return (
    <div className="App">
      <MaterialTable
      title="My bookmarks"
      columns={state.columns}
      data={state.data}
      editable={{
        onRowAdd: newData =>
          new Promise(resolve => {
            setTimeout(() => {
              resolve();
              const data = [...state.data];
              data.push(newData);
              setState({ ...state, data });
            }, 600);
          }),
        onRowUpdate: (newData, oldData) =>
          new Promise(resolve => {
            setTimeout(() => {
              resolve();
              const data = [...state.data];
              data[data.indexOf(oldData)] = newData;
              setState({ ...state, data });
            }, 600);
          }),
        onRowDelete: oldData =>
          new Promise(resolve => {
            setTimeout(() => {
              resolve();
              const data = [...state.data];
              data.splice(data.indexOf(oldData), 1);
              setState({ ...state, data });
            }, 600);
          }),
      }}
    />
    </div>
  );
}

export default App;
